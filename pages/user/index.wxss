page {
  background: #eee;
}
.user_info {
  position: relative;
}
.user_info .user_info_img {
  overflow: hidden;
}
.user_info .user_info_img image {
  width: 100%;
  height: 50vh;
  background: var(--themeColor);
  filter: blur(10rpx);
}
.user_info .user_info_head {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.user_info .user_info_head .header image {
  width: 165rpx;
  height: 165rpx;
  border-radius: 50%;
}
.user_info .user_info_head .user_info_name {
  margin-top: 40rpx;
  text-align: center;
  color: #fff;
}
.user_info .btn {
  width: 180rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 38rpx;
}
.user_main {
  padding-bottom: 100rpx;
  overflow: hidden;
  position: relative;
  width: 90%;
  left: 50%;
  top: -40rpx;
  transform: translateX(-50%);
}
.user_main .history {
  width: 100%;
  position: absolute;
  display: flex;
  justify-content: space-between;
  background: #fff;
}
.user_main .history navigator {
  flex: 1;
}
.user_main .history navigator view {
  text-align: center;
}
.user_main .history navigator .his_num {
  color: var(--themeColor);
}
.user_main .orders {
  background: #fff;
  margin-top: 100rpx ;
}
.user_main .orders .orders_title {
  border-bottom: 5rpx solid #eee;
  padding: 20rpx;
}
.user_main .orders .orders_content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}
.user_main .orders .orders_content navigator {
  flex: 1;
  text-align: center;
}
.user_main .orders .orders_content navigator .iconfont {
  color: var(--themeColor);
}
.user_main .address_manage,
.user_main .service,
.user_main .opinion,
.user_main .our,
.user_main .share {
  background: #fff;
  padding: 20rpx;
}
.user_main .address_manage {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.user_main .service {
  display: flex;
  justify-content: space-between;
}
.user_main .opinion,
.user_main .our {
  margin-top: 5rpx;
  position: relative;
}
.user_main .share {
  margin-top: 20rpx;
}
