/* pages/user/collect/index.wxss */
.good {
  display: flex;
  height: 218rpx;
  border-bottom: 2rpx solid #ccc;
}
.good .image {
  flex: 2;
  vertical-align: middle;
  text-align: center;
}
.good .image image {
  width: 70%;
}
.good .content {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.good .content .name {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.good .content .price {
  color: var(--themeColor);
  font-size: 32rpx;
}
